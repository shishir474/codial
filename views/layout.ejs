<!-- all the view files will be rendered according to this layout -->
<html>
<head>
    <!-- including links for noty js via cdn -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <!-- jquery cdn.... included in layout so that all other pages are able to use it-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    
    <!-- This will be the common styling to all the files that are rendered using this layout --> 
    <link rel="stylesheet" href="<%= assetPath('css/layout.css') %>">
    <link rel="stylesheet" href="<%= assetPath('css/header.css') %>">
    <link rel="stylesheet" href="<%= assetPath('css/footer.css') %>">
    <%- style %>
</head>
<body>
  <%- include('_header');  %>

   
  <!-- <% if(flash.success && flash.success.length > 0) {%>
    // this is the simple plain notification text.. no animations..Now we'll use noty.js(included using cdn <link> and <script>) for featuring more advanced and beutiful notifications
      <h5>
        <%= flash.success %>
      </h5>
    <% } %> -->

  <main id="layout-main">
    <%- body %> 
  </main>
   
    <!-- Here body represents the bodypart of the view file that is going to be rendered -->
    <%- include('_footer');  %>
    
    <%- script %>

  <script>
    // script tag for displaying notifiations using noty js
      <% if(flash.success && flash.success.length > 0) { %>
                  // refer google: noty js and cdn noty js 
            new Noty({
              theme: 'relax',
              // text part specifies the notification text content
              text: "<%= flash.success %>",
              // type is color scheme like info, success, warning, error, alert
              type: 'success',
              // layout specifies where do I want it to display the notification
              layout: 'topRight',
              timeout: '1500'
      
          }).show();
    
      <% } %>
      // notification for error
      <% if(flash.error && flash.error.length > 0) { %>
                  // refer google: noty js and cdn noty js 
          new Noty({
            theme: 'relax',
            // text part specifies the notification text content
            text: "<%= flash.error %>",
            // type is color scheme like info, success, warning, error, alert
            type: 'error',
            // layout specifies where do I want it to display the notification
            layout: 'topRight',
            timeout: 1500
    
        }).show();
    
      <% } %>
  </script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>