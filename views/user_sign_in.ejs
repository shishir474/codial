<div id=signin-div>
      <form action="/users/create-session" method="POST">
            <div class="container">
              <label for="email"><b>Email</b></label>
              <input type="email" placeholder="Enter Email" name="email" >
          
              <label for="password"><b>Password</b></label>
              <input type="password" placeholder="Enter Password" name="password" >
          
              <button type="submit">Login</button>
              <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
              </label>
              <button id="google-login">
                  <a href="/users/auth/google"><i class="fab fa-google" style="margin-right: 0.5rem;">&nbsp&nbspLogin with Google</i></a>
            </button> 
            </div>
          
            <div class="container" style="background-color:#f1f1f1">
              
              <span class="psw">Forgot <a href="/users/forgot">password?</a></span>
            </div>
          </form>
</div>
